<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f5f5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Broadcast Your Post"
        android:textSize="30dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="#6a1b9a" />

    <Spinner
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="35dp"
        android:id="@+id/relatedsectorspinner"
        android:background="@drawable/spinner_background">

    </Spinner>

    <Spinner
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="35dp"
        android:id="@+id/relatedshemesspinner"
        android:background="@drawable/spinner_background">

    </Spinner>

    <Spinner
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="35dp"
        android:id="@+id/related_section_of_people"
        android:background="@drawable/spinner_background">

    </Spinner>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Description"
        android:textStyle="bold"
        android:textColor="#6a1b9a"
        android:textSize="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:hint="Add Detail of complain..."
        android:background="#f3e5f5"
        android:textColor="#6a1b9a"
        android:textColorHint="#fff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:gravity="center"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Add Attachment"
        android:textColor="#6a1b9a"
        android:textStyle="bold"
        android:textSize="16dp"/>

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#f3e5f5"
        android:src="@drawable/ic_camera_alt_black_24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"
                android:text="Upload if any pdf file"
                android:textColor="#6a1b9a"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <Button
                android:layout_marginRight="10dp"
                android:layout_width="120dp"
                android:layout_alignParentRight="true"
                android:layout_height="32dp"
                android:text="Upload"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:background="@drawable/round_gender_button"/>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Broadcast to Constituency"
        android:textStyle="normal"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:background="@drawable/round_gender_button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Broadcast to DAs"
        android:textStyle="normal"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:background="@drawable/round_gender_button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>


</LinearLayout>
</ScrollView>