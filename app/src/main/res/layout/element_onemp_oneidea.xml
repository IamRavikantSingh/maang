<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#b6b6b6"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/innovatorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Innovator Name :"
            android:textSize="15dp"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/name"
            android:layout_toRightOf="@+id/innovatorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atul Kumar"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000"
            />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/innovationname"
                android:layout_below="@+id/innovatorname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Innovation Name :"
                android:textSize="15dp"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/innovation_name"
                android:layout_toRightOf="@+id/innovationname"
                android:layout_below="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To reduce gap between MP and Local People"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/detail"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/innovation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail :"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/detailofinnovation"
                android:layout_below="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blah Blah Blah"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textColor="#000"
                />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/detailofinnovation"
                android:background="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/endorsecount"
                android:layout_marginRight="3dp"
                android:text="0"
                android:textColor="#000"
                android:layout_below="@+id/divider3"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/endorsecount"
                android:id="@+id/endorse"
                android:textColor="#000"
                android:text=" Endorse"
                android:textStyle="bold"
                android:layout_below="@+id/divider3"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nommineecount"
                android:layout_marginRight="3dp"
                android:text="0"
                android:textColor="#000"
                android:layout_below="@+id/divider3"
                android:layout_toLeftOf="@+id/nominate"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                android:id="@+id/nominate"
                android:textColor="#000"
                android:text="Nominate"
                android:textStyle="bold"
                android:layout_below="@+id/divider3"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:textSize="20dp"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>