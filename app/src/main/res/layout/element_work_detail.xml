<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="8dp"
        android:backgroundTint="#fff">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userprofilepic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="Recommendation Date -"
                android:textColor="#6a1b9a"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recommend_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/userprofilepic"
                android:text="23/09/17"
                android:textColor="#6a1b9a"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/amount"
                android:text="Amount -"
                android:textColor="#6a1b9a" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="4dp"
                android:text="50000.00"
                android:textColor="#6a1b9a"
                android:textSize="12dp"
                android:textStyle="bold" />

            <view
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/userprofilepic"
                android:background="#fff" />

            <TextView
                android:id="@+id/sector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userprofilepic"
                android:layout_marginLeft="5dp"
                android:text="Though i was iphone user for 11 year, I switched from an iphone to a samsung galaxy note 9..."
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/scheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sector"
                android:layout_marginLeft="5dp"
                android:text="Though i was iphone user for 11 year, I switched from an iphone to a samsung galaxy note 9..."
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/implimentingAgencies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scheme"
                android:layout_marginLeft="5dp"
                android:text="Though i was iphone user for 11 year, I switched from an iphone to a samsung galaxy note 9..."
                android:textColor="#000"
                android:textSize="15dp" />


            <Button
                android:id="@+id/complain_btn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/implimentingAgencies"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:background="#6a1b9a"
                android:text="Add your complain"
                android:textAllCaps="false"
                android:textColor="#fff" />

            <Button
                android:id="@+id/suggestion_btn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/complain_btn"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="#6a1b9a"
                android:text="Give your suggestion"
                android:textAllCaps="false"
                android:textColor="#fff" />

            <view
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/suggestion_btn"
                android:layout_marginTop="3dp"
                android:background="#b3b3b3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/thumbeup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/ic_thumb_up" />

                    <TextView
                        android:id="@+id/like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/thumbeup"
                        android:text="Like"
                        android:textColor="#6a1b9a"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/commentsimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/ic_comment" />

                    <TextView
                        android:id="@+id/comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/commentsimg"
                        android:text="Comment"
                        android:textColor="#6a1b9a"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp">

                    <ImageView
                        android:id="@+id/shareimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/ic_star" />

                    <TextView
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/shareimg"
                        android:text="Rate"
                        android:textColor="#6a1b9a"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</ScrollView>
